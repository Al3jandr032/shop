<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.ipn.model.beans.Producto" table="productos">
      <id name="id" type="int" column="id_producto">
          <generator class="increment"/>
      </id>
      <property name="Nombre" type="String" column="Nombre"/>
      <property name="Descripcion" type="String" column="Descripcion"/>
      <property name="precio" type="float" column="Precio"/>
      <property name="existencias" type="int" column="Existencias"/>
  </class>
</hibernate-mapping>
